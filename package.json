{
  "name": "memlog",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">= 18.0.0",
    "npm": ">= 8.6.0"
  },
  "scripts": {
    "build": "export REACT_APP_VERSION=$(git rev-parse HEAD); PUBLIC_URL=/memlog npx react-scripts build",
    "dev": "export REACT_APP_VERSION=$(git rev-parse HEAD); npx react-scripts start",
    "lint": "prettier --ignore-path .gitignore --write . && eslint --fix --ext ts,tsx ./src",
    "start": "export REACT_APP_VERSION=$(git rev-parse HEAD); npx react-scripts start",
    "test": "export REACT_APP_VERSION=$(git rev-parse HEAD); npx react-scripts test",
    "prepare": "husky install"
  },
  "dependencies": {
    "@chakra-ui/icons": "^1.1.7",
    "@chakra-ui/react": "^1.8.8",
    "@emotion/react": "^11.9.0",
    "@emotion/styled": "^11.8.1",
    "@octokit/graphql": "^4.8.0",
    "@uiball/loaders": "^1.2.6",
    "date-fns": "^2.28.0",
    "framer-motion": "^6.3.3",
    "graphql": "^16.4.0",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "recoil": "^0.7.2",
    "web-vitals": "^0.2.4",
    "workbox-background-sync": "^5.1.4",
    "workbox-broadcast-update": "^5.1.4",
    "workbox-cacheable-response": "^5.1.4",
    "workbox-core": "^5.1.4",
    "workbox-expiration": "^5.1.4",
    "workbox-google-analytics": "^5.1.4",
    "workbox-navigation-preload": "^5.1.4",
    "workbox-precaching": "^5.1.4",
    "workbox-range-requests": "^5.1.4",
    "workbox-routing": "^5.1.4",
    "workbox-strategies": "^5.1.4",
    "workbox-streams": "^5.1.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.4",
    "@commitlint/config-conventional": "^16.2.4",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^11.2.7",
    "@testing-library/user-event": "^12.8.3",
    "@types/jest": "^26.0.24",
    "@types/node": "^12.20.50",
    "@types/react": "^18.0.8",
    "@types/react-dom": "^18.0.3",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.4.1",
    "prettier": "^2.6.2",
    "react-scripts": "5.0.1",
    "typescript": "^4.6.4"
  },
  "browserslist": {
    "production": [
      "last 1 chrome version"
    ],
    "development": [
      "last 1 chrome version"
    ]
  },
  "prettier": {
    "printWidth": 200,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest",
      "plugin:import/typescript",
      "prettier"
    ],
    "rules": {
      "import/order": [
        "error",
        {
          "alphabetize": {
            "order": "asc"
          },
          "groups": [
            "builtin",
            "external",
            "parent",
            "sibling",
            "index"
          ]
        }
      ]
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,html,css,scss,json,yml,yaml,md}": [
      "prettier --write"
    ],
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix --cache"
    ]
  }
}
